<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <version author="Bob Jacobsen" version="3" lastUpdated="20031205"/>
  <!-- version 3 - Minor formatting changes - Jack Shall -->
  <decoder>
    <family name="NMRA standard register definitions" mfg="NMRA">
      <model model="NMRA standard register definitions"/>
    </family>
    <programming direct="no" paged="no" register="yes" ops="no"/>
    <variables>
      <!-- Register 1 -->
      <xi:include href="http://jmri.org/xml/decoders/nmra/shortAddressOnly.xml"/>
      <!-- Register 2 -->
      <variable item="Vstart" CV="2" comment="A value of 255 corresponds to 100%">
        <decVal/>
        <comment xml:lang="it"> Un valore di 255 corrisponde al 100%</comment>
        <comment xml:lang="de">Der Wert 255 entspricht 100%</comment>
        <label>Vstart</label>
        <label xml:lang="it">Volt Partenza</label>
        <label xml:lang="fr">V démarr.</label>
        <label xml:lang="de">Anfahrspannung</label>
      </variable>
      <!-- Register 3 -->
      <variable CV="3" item="Accel">
        <decVal max="31"/>
        <label>Acceleration Rate</label>
        <label xml:lang="it">Accellerazione (0-31)</label>
        <label xml:lang="fr">Accelération (0-31)</label>
        <label xml:lang="de">Anfahrverzögerung (0-31)</label>
        <label xml:lang="it">Grado Accellerazione</label>
      </variable>
      <!-- Register 4 -->
      <variable CV="4" item="Decel">
        <decVal max="31"/>
        <label>Deceleration Rate</label>
        <label xml:lang="it">Decellerazione (0-31)</label>
        <label xml:lang="fr">Décélération (0-31)</label>
        <label xml:lang="de">Bremszeit (0-31)</label>
      </variable>
      <!-- Register 5 -->
      <variable item="Locomotive Direction" CV="29" mask="XXXXXXXV">
        <xi:include href="http://jmri.org/xml/decoders/parts/enum-FwdRev.xml"/>
        <label>Locomotive Direction</label>
        <label xml:lang="it">Direzione Locomotiva</label>
      </variable>
      <variable CV="29" mask="XXXXXXVX" item="Speed Step Mode">
        <enumVal>
          <enumChoice choice="14 speed step format">
            <choice xml:lang="it">Formato 14 step</choice>
          </enumChoice>
          <enumChoice choice="28 speed step format">
            <choice xml:lang="it">Formato 28 step</choice>
          </enumChoice>
        </enumVal>
        <label>Speed Step Mode</label>
        <label xml:lang="it">Formato Step Velocità</label>
      </variable>
      <variable CV="29" mask="XXXXXVXX" item="Analog (DC) Operation">
        <enumVal>
          <enumChoice choice="NMRA Digital only">
            <choice xml:lang="it">Solo NMRA DCC</choice>
          </enumChoice>
          <enumChoice choice="DC conversion enabled">
            <choice xml:lang="it">Conversione DC abilitata</choice>
          </enumChoice>
        </enumVal>
        <label>Power Source Conversion</label>
        <label xml:lang="it">Conversione Sorgente Alimentazione</label>
      </variable>
      <variable CV="29" mask="XXXXVXXX" item="Advanced Ack">
        <xi:include href="http://jmri.org/xml/decoders/parts/enum-disabledEnabled.xml"/>
        <label>Advanced Decoder Acknowledgement</label>
        <label xml:lang="it">Riconoscimento Avanzato Decoder</label>
      </variable>
      <!-- Register 7 -->
      <xi:include href="http://jmri.org/xml/decoders/nmra/mfgVersionId.xml"/>
    </variables>
  </decoder>
</decoder-config>
