<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="JMRI-IDE">
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/55/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-jmri">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="classes"/>
        <javac destdir="classes" includes="${files}" source="1.3" srcdir="src/jmri">
            <classpath path=".:java/classes:java/lib/junit.jar:jmri.jar:lib/log4j.jar:lib/jhall.jar:lib/crimson.jar:lib/jdom.jar:lib/jython.jar:lib/javacsv.jar:lib/MRJAdapter.jar:lib/jinput.jar:lib/vecmath.jar"/>
        </javac>
    </target>
</project>
