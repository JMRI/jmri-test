  <aspecttable>AAR-2</aspecttable>
  <name>Double position light high signal</name>
  <reference>As described in the August 1946 version of the AAR publication "American Railway Signaling Principles and Practices", chapter II.</reference>
  <description>Appearances for a two high position light signal</description>
  
  <appearances>

    <appearance>
      <aspectname>Approach Medium</aspectname>
      <show>yellow</show>
      <show>green</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-2-high/rule-282.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Advance Approach</aspectname>
      <show>yellow</show>
      <show>yellow</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-2-high/rule-282A.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Medium Clear</aspectname>
      <show>red</show>
      <show>green</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-2-high/rule-283.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Slow Approach</aspectname>
      <show>red</show>
      <show>yellow</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-2-high/rule-288.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Restricting</aspectname>
      <show>red</show>
      <show>lunar</show>
      <reference>Page 55</reference>
      <imagelink>../../../resources/icons/smallschematics/aspects/AAR-1946/PL-2-high/rule-290.gif</imagelink>
    </appearance>
  </appearances>

  <specificappearances>
    <danger>
      <aspect>Restricting</aspect>
    </danger>
    <held>
      <aspect>Restricting</aspect>
    </held>
  </specificappearances>

  <aspectMappings>
    <aspectMapping>
      <advancedAspect>Clear</advancedAspect>
      <ourAspect>Medium Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach Medium</advancedAspect>
      <ourAspect>Advance Approach</ourAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Advance Approach</advancedAspect>
      <ourAspect>Medium Clear</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Medium Clear</advancedAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Approach</advancedAspect>
      <ourAspect>Advance Approach</ourAspect>
      <ourAspect>Approach Medium</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Clear</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Slow Approach</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Permissive</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Restricting</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop and Proceed</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

    <aspectMapping>
      <advancedAspect>Stop</advancedAspect>
      <ourAspect>Slow Approach</ourAspect>
    </aspectMapping>

  </aspectMappings>
</appearancetable>  
