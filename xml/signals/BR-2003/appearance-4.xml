  <aspecttable>BR</aspecttable>

  <name>4 Aspect Signal</name>
  
  <description>This uses a single head to control the aspects with Lunar acting as the second yellow</description>
  
  <appearances>

    <appearance>
      <aspectname>Proceed</aspectname>
      <show>green</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4Proceed.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Proceed-4.gif</imagelink>
    </appearance>

    <appearance>
      <aspectname>Caution</aspectname>
      <show>yellow</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4Caution.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Caution-4.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Flash Caution</aspectname>
      <show>flashyellow</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4FlashCaution.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/FlashCaution-4.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Preliminary Caution</aspectname>
      <show>lunar</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4PriCaution.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/PriCaution-4.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Flash Preliminary Caution</aspectname>
      <show>flashlunar</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4FlashPriCaution.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/FlashPriCaution-4.gif</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>Danger</aspectname>
      <show>red</show>
      
      <imagelink type="large">../../../resources/icons/BritishRailSignals/Large/cls4Danger.gif</imagelink>
      <imagelink type="aspects">../../../resources/icons/BritishRailSignals/Aspects/Danger-4.gif</imagelink>
    </appearance>
    
