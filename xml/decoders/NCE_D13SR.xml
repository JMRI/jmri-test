<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: NCE_D13SR.xml,v 1.6 2002-01-01 01:49:53 jacobsen Exp $ -->
<decoder-config>
		<version author="Bob Jacobsen" version="2" lastUpdated="20011229"/>

<decoder>
	<id family="NCE_D13SR" mfg="North Coast Engineering" mfgID="11" defnVersion="0"
				comment="From paper, not yet confirmed"></id>

	<programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable name="Primary Address" CV="1" comment="Short address"
						stdName="Short Address"  default="03">
			<decVal min="1" max="127"/></variable>
		<variable name="Vstart" CV="2"
						comment="A value of 255 corresponds to 100%">
			<decVal/></variable>
		<variable name="Acceleration Rate" CV="3"
						stdName="Accel" >
			<decVal max="31"/></variable>
		<variable name="Deceleration Rate" CV="4"
						stdName="Decel">
			<decVal max="31"/></variable>
		<variable name="Vhigh" CV="5">					<decVal/></variable>
		<variable name="Vmid" CV="6">					<decVal/></variable>
		<variable name="Manufacturer Version No" CV="7" readOnly="yes"
						stdName="Decoder Version"><decVal/></variable>
		<variable name="Manufacturer ID" CV="8" readOnly="yes"
						stdName="Manufacturer">			<decVal/></variable>
		<variable name="Motor drive frequency" CV="9" stdName="Total PWM Period"
						comment="1-255 PWM drive freq in 128us increments; 0 = frequency is 15,625 Hz">
			<decVal/></variable>
			
		<variable name="Extended Address" CV="17"
						stdName="Long Address" >
			<longAddressVal/></variable>
			
		<variable name="Consist Address" CV="19" mask="XVVVVVVV"><decVal/></variable>
		
		<variable name="Consist Direction" CV="19" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="Normal"></enumChoice>
				<enumChoice choice="Reversed"></enumChoice>
				</enumVal></variable>

		<variable name="Consist Address Active For F1" CV="21" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable name="Consist Address Active For FL in Forward" CV="22" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable name="Consist Address Active For FL in Reverse" CV="22" mask="XXXXXXVX">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable name="Consist Acceleration Adjustment" CV="23" mask="XVVVVVVV">
				<decVal max="127"/>
			</variable>
		<variable name="Consist Acceleration Adjustment Sign" CV="23" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="Adjustment Added"/>
				<enumChoice choice="Adjustment Subtracted"/>
				</enumVal></variable>
		<variable name="Consist Deceleration Adjustment" CV="24" mask="XVVVVVVV">
				<decVal max="127"/>
			</variable>
		<variable name="Consist Deceleration Adjustment Sign" CV="24" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="Adjustment Added"/>
				<enumChoice choice="Adjustment Subtracted"/>
				</enumVal></variable>

		<variable name="Locomotive Direction" CV="29" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="normal"/>
				<enumChoice choice="reversed"/>
				</enumVal></variable>
		<variable name="FL Location" CV="29" mask="XXXXXXVX"
					stdName="Speed Step Mode">
			<enumVal>
				<enumChoice choice="14 speed step format"/>
				<enumChoice choice="28 speed step format"/>
				</enumVal></variable>
		<variable name="Power Source Conversion" CV="29" mask="XXXXXVXX"
					stdName="Analog (DC) Operation" >
			<enumVal>
				<enumChoice choice="NMRA Digital only"/>
				<enumChoice choice="DC conversion enabled"/>
				</enumVal></variable>
		<variable name="Advanced Decoder Acknowledgement" CV="29" mask="XXXXVXXX"
					stdName="Advanced Ack">
			<enumVal>
				<enumChoice choice="disabled"/>
				<enumChoice choice="enabled"/>
				</enumVal></variable>
		<variable name="Speed Table Definition" CV="29" mask="XXXVXXXX">
			<enumVal>
				<enumChoice choice="Use Vstart, Vmid, Vhigh"/>
				<enumChoice choice="Use table in CVs 66 through 95"/>
				</enumVal></variable>
		<variable name="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>

		<variable name="FL(f) controls output 1" CV="33" mask="XXXXXXXV" minOut="1"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="FL(f) controls output 2" CV="33" mask="XXXXXXVX" minOut="2"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="FL(f) controls output 3" CV="33" mask="XXXXXVXX" minOut="3"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable name="FL(r) controls output 1" CV="34" mask="XXXXXXXV" minOut="1"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="FL(r) controls output 2" CV="34" mask="XXXXXXVX" minOut="2"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="FL(r) controls output 3" CV="34" mask="XXXXXVXX" minOut="3"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable name="F1 controls output 1" CV="35" mask="XXXXXXXV" minOut="1" minFn="1"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="F1 controls output 2" CV="35" mask="XXXXXXVX" minOut="2" minFn="1"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable name="F1 controls output 3" CV="35" mask="XXXXXVXX" minOut="3" minFn="1"> <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
						
		<variable name="Kick Start" CV="65">			<decVal/></variable>

		<variable name="Speed Table" CV="67">
			<speedTableVal/></variable>

		<!-- NCE-specific variables -->	
		
		<variable name="Ditch light hold time" CV="118" mask="VVVVVVVV"
					stdName="Global lighting option 1">
			<decVal/>
			</variable>
		<variable name="Lighting Effects Page" CV="119" mask="VVVVVVVV"
					stdName="Global lighting option 2">
				<decVal/>
			</variable>
			
		<variable name="Output 1 effect generated" CV="120" mask="XXVVVVXX" minOut="1">
			<enumVal>
				<enumChoice choice="Standard on/off function output"/>
				<enumChoice choice="reserved"/>
				<enumChoice choice="Mars light"/>
				<enumChoice choice="Rotary beacon"/>
				<enumChoice choice="Gyralight"/>
				<enumChoice choice="Double strobe"/>
				<enumChoice choice="Strobe A"/>
				<enumChoice choice="Strobe B (alternates with strobe A)"/>
				<enumChoice choice="Dim when F0 and F4 on, otherwise bright"/>
				<enumChoice choice="Dim when F0 and F8 on, otherwise bright"/>
				<enumChoice choice="Dim in forward, bright in reverse"/>
				<enumChoice choice="Dim in reverse, bright in forward"/>
				<enumChoice choice="Type 2 right ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 2 left ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 1 right ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				<enumChoice choice="Type 1 left ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				</enumVal>
			</variable>
		<variable name="Output 1 active" CV="120" mask="XXXXXXVV" minOut="1"
					stdName="Output 1 behaviour">
			<enumVal>
				<enumChoice choice="Both directions"/>
				<enumChoice choice="Only in forward"/>
				<enumChoice choice="Only in reverse"/>
				</enumVal>
			</variable>
		<variable name="Output 1 connected to" CV="120" mask="VXXXXXXX" minOut="1"
					stdName="Output 1 options">
			<enumVal>
				<enumChoice choice="30-40mA incandescent bulb"/>
				<enumChoice choice="LED and limiting resistor"/>
				</enumVal>
			</variable>
		
		<variable name="Output 2 effect generated" CV="121" mask="XXVVVVXX" minOut="2">
			<enumVal>
				<enumChoice choice="Standard on/off function output"/>
				<enumChoice choice="reserved"/>
				<enumChoice choice="Mars light"/>
				<enumChoice choice="Rotary beacon"/>
				<enumChoice choice="Gyralight"/>
				<enumChoice choice="Double strobe"/>
				<enumChoice choice="Strobe A"/>
				<enumChoice choice="Strobe B (alternates with strobe A)"/>
				<enumChoice choice="Dim when F0 and F4 on, otherwise bright"/>
				<enumChoice choice="Dim when F0 and F8 on, otherwise bright"/>
				<enumChoice choice="Dim in forward, bright in reverse"/>
				<enumChoice choice="Dim in reverse, bright in forward"/>
				<enumChoice choice="Type 2 right ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 2 left ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 1 right ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				<enumChoice choice="Type 1 left ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				</enumVal>
			</variable>
		<variable name="Output 2 active" CV="121" mask="XXXXXXVV" minOut="2"
					stdName="Output 2 behaviour">
			<enumVal>
				<enumChoice choice="Both directions"/>
				<enumChoice choice="Only in forward"/>
				<enumChoice choice="Only in reverse"/>
				</enumVal>
			</variable>
		<variable name="Output 2 connected to" CV="121" mask="VXXXXXXX" minOut="2"
					stdName="Output 2 options">
			<enumVal>
				<enumChoice choice="30-40mA incandescent bulb"/>
				<enumChoice choice="LED and limiting resistor"/>
				</enumVal>
			</variable>
		
		<variable name="Output 3 effect generated" CV="122" mask="XXVVVVXX" minOut="3">
			<enumVal>
				<enumChoice choice="Standard on/off function output"/>
				<enumChoice choice="reserved"/>
				<enumChoice choice="Mars light"/>
				<enumChoice choice="Rotary beacon"/>
				<enumChoice choice="Gyralight"/>
				<enumChoice choice="Double strobe"/>
				<enumChoice choice="Strobe A"/>
				<enumChoice choice="Strobe B (alternates with strobe A)"/>
				<enumChoice choice="Dim when F0 and F4 on, otherwise bright"/>
				<enumChoice choice="Dim when F0 and F8 on, otherwise bright"/>
				<enumChoice choice="Dim in forward, bright in reverse"/>
				<enumChoice choice="Dim in reverse, bright in forward"/>
				<enumChoice choice="Type 2 right ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 2 left ditch light, effect on if F2 on, output off otherwise"/>
				<enumChoice choice="Type 1 right ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				<enumChoice choice="Type 1 left ditch light, effect on if F0 and F2 on, bright if F0 on and F2 off, off if F0 off"/>
				</enumVal>
			</variable>
		<variable name="Output 3 active" CV="122" mask="XXXXXXVV" minOut="3"
					stdName="Output 3 behaviour">
			<enumVal>
				<enumChoice choice="Both directions"/>
				<enumChoice choice="Only in forward"/>
				<enumChoice choice="Only in reverse"/>
				</enumVal>
			</variable>
		<variable name="Output 3 connected to" CV="122" mask="VXXXXXXX" minOut="3"
					stdName="Output 3 options">
			<enumVal>
				<enumChoice choice="30-40mA incandescent bulb"/>
				<enumChoice choice="LED and limiting resistor"/>
				</enumVal>
			</variable>
	
	</variables>
</decoder>

</decoder-config>
