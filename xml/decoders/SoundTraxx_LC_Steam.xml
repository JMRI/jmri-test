<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: SoundTraxx_LC_Steam.xml,v 1.5 2002-02-20 16:05:36 jacobsen Exp $ -->
<decoder-config>
		<version author="Robin Becker" version="4" lastUpdated="20020217"/>

		<!-- version 4: updates to minOut usage, function mapping -->

<decoder>
	<family name="LC Steam" mfg="Throttle-Up"
				lowVersionID="32" highVersionID="33">
		<model model="100LC Steam" numOuts="2" numFns="8">
			<output name="3" label="FX1/grn" />
			<output name="4" label="FX2/brwn" />
			<output name="Whistle"/>
			<output name="Bell"/> 
			<output name="Hiss"/> 
			<output name="Dynamo"/> 
			<output name="Coupler"/> 
			<output name="Mute"/> 
			<!-- The two electical outputs are front headlight, back -->
			<!-- headlight-->
			</model>
	</family>

	<programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable label="Primary Address" CV="1" comment="Short address"
						item="Short Address"  default="03">
			<decVal min="1" max="127"/></variable>

		<variable label="Start voltage" CV="2" item="Vstart"
						comment="A value of 255 corresponds to 100%">
			<decVal/></variable>

		<variable label="Acceleration Rate" CV="3" item="Accel">
			<decVal/></variable>

		<variable label="Braking Rate" CV="4" item="Decel">
			<decVal/></variable>

		<variable label="Manufacturer Version No" CV="7" readOnly="yes"
						item="Decoder Version"><decVal/></variable>
		<variable label="Manufacturer ID" CV="8" readOnly="yes"
						item="Manufacturer">			<decVal/></variable>

		<variable label="Motor PWM Period" CV="9" item="Total PWM Period"
					comment="52.2mS to 5.12 ms">
			<decVal max="230"/></variable>

		<variable label="Packet Timeout Value" CV="11" item="Packet Time-out Value">
			<decVal/></variable>

		<variable label="Extended Address" CV="17"
						item="Long Address" >
			<longAddressVal/></variable>
		<variable label="Advanced Consist address" CV="19" item="Consist Address">
			<decVal/>
			</variable>

		<variable label="Consist Address" CV="19" mask="XVVVVVVV"><decVal/></variable>
		
		<variable label="Consist Direction" CV="19" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="Normal"></enumChoice>
				<enumChoice choice="Reversed"></enumChoice>
				</enumVal></variable>

		<variable label="Consist Address Active For F1" CV="21" mask="XXXXXXXV" minFn="1">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F2" CV="21" mask="XXXXXXVX" minFn="2">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F3" CV="21" mask="XXXXXVXX" minFn="3">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F4" CV="21" mask="XXXXVXXX" minFn="4">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F5" CV="21" mask="XXXVXXXX" minFn="5">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F6" CV="21" mask="XXVXXXXX" minFn="6">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F7" CV="21" mask="XVXXXXXX" minFn="7">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For F8" CV="21" mask="VXXXXXXX" minFn="8">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
				
		<variable label="Consist Address Active For FL in Forward" CV="22" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>
		<variable label="Consist Address Active For FL in Reverse" CV="22" mask="XXXXXXVX">
			<enumVal>
				<enumChoice choice="Locomotive Address Only"/>
				<enumChoice choice="Respond to Consist Address"/>
				</enumVal></variable>

		<variable label="Consist Acceleration Rate" CV="23" mask="XVVVVVVV"
				item="Consist Acceleration Adjustment"
		        comment="Additional consist acceleration (combined with CV3)">
			<decVal default="0" max="127"/>
			</variable>
		<variable label="Consist Acceleration Sign" CV="23" mask="VXXXXXXX"
				item="Consist Acceleration Adjustment Sign">
			<enumVal>
				<enumChoice choice="positive"/>
				<enumChoice choice="negative"/>
				</enumVal>
			</variable>
		<variable label="Consist Braking Rate" CV="24" mask="XVVVVVVV"
				item="Consist Deceleration Adjustment"
		        comment="Additional consist braking (combined with CV4)">
			<decVal default="0" max="127"/>
			</variable>
		<variable label="Consist Braking Sign" CV="24" mask="VXXXXXXX"
				item="Consist Deceleration Adjustment Sign">
			<enumVal>
				<enumChoice choice="positive"/>
				<enumChoice choice="negative"/>
				</enumVal>
			</variable>

		<variable label="Speed Table Selection" CV="25" mask="XXXVVVVV">
			<enumVal>
				<enumChoice choice="no table"/>
				<enumChoice choice="no table"/>
				<enumChoice choice="Straight Line"/>
				<enumChoice choice="Log Curve 1"/>
				<enumChoice choice="Log Curve 2"/>
				<enumChoice choice="Log Curve 3"/>
				<enumChoice choice="Log Curve 4"/>
				<enumChoice choice="Log Curve 5"/>
				<enumChoice choice="Log Curve 6"/>
				<enumChoice choice="Log Curve 7"/>
				<enumChoice choice="Exp Curve 1"/>
				<enumChoice choice="Exp Curve 2"/>
				<enumChoice choice="Exp Curve 3"/>
				<enumChoice choice="Exp Curve 4"/>
				<enumChoice choice="Exp Curve 5"/>
				<enumChoice choice="Exp Curve 6"/>
				<enumChoice choice="User Table"/>
				</enumVal>
			</variable>

		<variable label="Normal direction of motion" CV="29" mask="XXXXXXXV" item="Locomotive Direction">
			<enumVal>
				<enumChoice choice="forward"/>
				<enumChoice choice="reverse"/>
				</enumVal>
			</variable>
		<variable label="Speed steps" CV="29" mask="XXXXXXVX" 
				item="Speed Step Mode" default="1">
			<enumVal>
				<enumChoice choice="14"/>
				<enumChoice choice="28/128"/>
				</enumVal>
			</variable>
		<variable label="Use Speed Table" CV="29" mask="XXXVXXXX"
					item="Speed Table Definition">
			<enumVal>
				<enumChoice choice="Use Vstart"/>
				<enumChoice choice="Use Table"/>
				</enumVal>
			</variable>
		<variable label="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>


		<variable label="CV Address Extension" CV="30" mask="XXXXXXXV"
				item="Advanced Group 1 Option 1">
			<enumVal default="0">
				<enumChoice choice="System Normal"/>
				<enumChoice choice="CV112-128 mapped to 49-65"/>
				</enumVal></variable>
		<variable label="EEROM Data Corrupted" CV="30" mask="XXXXXXVX"
				item="Advanced Group 1 Option 2">
			<enumVal default="0">
				<enumChoice choice="System Normal"/>
				<enumChoice choice="Data corrupted. Reset to defaults."/>
				</enumVal></variable>
		<variable label="Function Group 3 Disable" CV="30" mask="XXXXXVXX"
				item="Advanced Group 1 Option 3">
			<enumVal default="0">
				<enumChoice choice="System Normal"/>
				<enumChoice choice="Ignore Group3 steerage bit"/>
				</enumVal></variable>
		<variable label="Alternate Function Map" CV="30" mask="XXXXVXXX"
				item="Advanced Group 1 Option 4">
			<enumVal default="0">
				<enumChoice choice="NMRA function map"/>
				<enumChoice choice="Soundtraxx function map"/>
				</enumVal></variable>
		<variable label="Watchdog Timer Reset" CV="30" mask="XXVXXXXX"
				item="Advanced Group 1 Option 5">
			<enumVal>
				<enumChoice choice="System Normal"/>
				<enumChoice choice="Watchdog timeout occurred"/>
				</enumVal></variable>
		<variable label="Program Checksum Failure" CV="30" mask="XVXXXXXX" 
				item="Advanced Group 1 Option 6" readOnly="yes">
			<enumVal>
				<enumChoice choice="System Normal"/>
				<enumChoice choice="Checksum Test Failed"/>
				</enumVal></variable>
		<variable label="I2C Bus Acknowledge Failure" CV="30" mask="VXXXXXXX" 
				item="Advanced Group 1 Option 7" readOnly="yes">
			<enumVal>
				<enumChoice choice="System Normal"/>
				<enumChoice choice="No ACK from I2C bus"/>
				</enumVal></variable>


		<variable label="FL(f) controls headlight" CV="33" mask="XXXXXXXV" 
				item="FL(f) controls output 1"
				minOut="1" default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(f) controls backup light" CV="33" mask="XXXXXXVX" 
				item="FL(f) controls output 2"
				minOut="2" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(f) controls whistle" CV="33" mask="XXXXXVXX" 
				item="FL(f) controls output Whistle"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(f) controls bell" CV="33" mask="XXXXVXXX" 
				item="FL(f) controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="FL(r) controls headlight" CV="34" mask="XXXXXXXV" 
				item="FL(r) controls output 1"
				minOut="1" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(r) controls backup light" CV="34" mask="XXXXXXVX" 
				item="FL(r) controls output 2"
				minOut="2" default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(r) controls whistle" CV="34" mask="XXXXXVXX" 
				item="FL(r) controls output Whistle"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="FL(r) controls bell" CV="34" mask="XXXXVXXX" 
				item="FL(r) controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F1 controls headlight" CV="35" mask="XXXXXXXV" 
				item="F1 controls output 1"
				minOut="1" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F1 controls backup light" CV="35" mask="XXXXXXVX" 
				item="F1 controls output 2"
				minOut="2" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F1 controls whistle" CV="35" mask="XXXXXVXX" 
				item="F1 controls output Whistle"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F1 controls bell" CV="35" mask="XXXXVXXX" 
				item="F1 controls output Bell"
				default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F2 controls headlight" CV="36" mask="XXXXXXXV" 
				item="F2 controls output 1"
				minOut="1" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F2 controls backup light" CV="36" mask="XXXXXXVX" 
				item="F2 controls output 2"
				minOut="2" default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F2 controls whistle" CV="36" mask="XXXXXVXX" 
				item="F2 controls output Whistle"
				default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F2 controls bell" CV="36" mask="XXXXVXXX" 
				item="F2 controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F3 controls bell" CV="37" mask="XXXXXXXV" 
				item="F3 controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F3 controls dimmer" CV="37" mask="VXXXXXXX" 
				item="F3 controls output Dim"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F4 controls bell" CV="38" mask="XXXXXXXV" 
				item="F4 controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F4 controls dimmer" CV="38" mask="VXXXXXXX" 
				item="F4 controls output Dim"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F5 controls bell" CV="39" mask="XXXXXXXV" 
				item="F5 controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F5 controls dimmer" CV="39" mask="VXXXXXXX" 
				item="F5 controls output Dim"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F6 controls bell" CV="40" mask="XXXXXXXV" 
				item="F6 controls output Bell"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F6 controls dimmer" CV="40" mask="VXXXXXXX" 
				item="F6 controls output Dim"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F7 controls dimmmer" CV="41" mask="XXXVXXXX" 
				item="F7 controls output Dim"
				default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F7 controls mute" CV="41" mask="XXVXXXXX" 
				item="F7 controls output Mute"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="F8 controls dimmmer" CV="42" mask="XXXVXXXX" 
				item="F8 controls output Dim"
				default="0" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>
		<variable label="F8 controls mute" CV="42" mask="XXVXXXXX" 
				item="F8 controls output Mute"
				default="1" > <enumVal> 
			<enumChoice choice="No"/> <enumChoice choice="Yes"/> </enumVal> </variable>

		<variable label="Forward light F0F effect generated" CV="49" mask="XXXXVVVV"
					item="Function F0F effect generated">
			<enumVal>
				<enumChoice choice="On/Off"/>
				<enumChoice choice="Dimmable"/>
				<enumChoice choice="Reserved (Mars light)"/>
				<enumChoice choice="Reserved (Gyralite)"/>
				<enumChoice choice="Reserved (Oscillating)"/>
				<enumChoice choice="Reserved (Single flash strobe)"/>
				<enumChoice choice="Reserved (Double flash strobe)"/>
				<enumChoice choice="Reserved (Rotary beacon simulation)"/>
				<enumChoice choice="Reserved (Stratolite)"/>
				<enumChoice choice="Reserved (Type 1 ditch light)"/>
				<enumChoice choice="Reserved (Type 2 ditch light)"/>
				<enumChoice choice="Reserved (FRED end of train flasher)"/>
				<enumChoice choice="Reserved (Engine exhaust flicker)"/>
				<enumChoice choice="Firebox flicker"/>
				<enumChoice choice="Smart firebox flicker"/>
				<enumChoice choice="Reserved (0x0F)"/>
				</enumVal>
			</variable>
		<variable label="Forward light F0F behaviour" CV="49" mask="XVVVXXXX"
					item="Function F0F behaviour">
			<enumVal>
				<enumChoice choice="Phase A"/>
				<enumChoice choice="Phase B"/>
				<enumChoice choice="Grade crossing enable, phase A"/>
				<enumChoice choice="Grade crossing enable, phase B"/>
				<enumChoice choice="Rule 17 enable, phase A"/>
				<enumChoice choice="Rule 17 enable, phase B"/>
				<enumChoice choice="Rule 17 enable, Grade crossing enable, Phase A"/>
				<enumChoice choice="Rule 17 enable, Grade crossing enable, Phase B"/>
				</enumVal>
			</variable>
		<variable label="Reverse light F0R effect generated" CV="50" mask="XXXXVVVV"
					item="Function F0R effect generated">
			<enumVal>
				<enumChoice choice="On/Off"/>
				<enumChoice choice="Dimmable"/>
				<enumChoice choice="Reserved (Mars light)"/>
				<enumChoice choice="Reserved (Gyralite)"/>
				<enumChoice choice="Reserved (Oscillating)"/>
				<enumChoice choice="Reserved (Single flash strobe)"/>
				<enumChoice choice="Reserved (Double flash strobe)"/>
				<enumChoice choice="Reserved (Rotary beacon simulation)"/>
				<enumChoice choice="Reserved (Stratolite)"/>
				<enumChoice choice="Reserved (Type 1 ditch light)"/>
				<enumChoice choice="Reserved (Type 2 ditch light)"/>
				<enumChoice choice="Reserved (FRED end of train flasher)"/>
				<enumChoice choice="Reserved (Engine exhaust flicker)"/>
				<enumChoice choice="Firebox flicker"/>
				<enumChoice choice="Smart firebox flicker"/>
				<enumChoice choice="Reserved (0x0F)"/>
				</enumVal>
			</variable>
		<variable label="Reverse light F0R behaviour" CV="50" mask="XVVVXXXX"
					item="Function F0R behaviour">
			<enumVal>
				<enumChoice choice="Phase A"/>
				<enumChoice choice="Phase B"/>
				<enumChoice choice="Grade crossing enable, phase A"/>
				<enumChoice choice="Grade crossing enable, phase B"/>
				<enumChoice choice="Rule 17 enable, phase A"/>
				<enumChoice choice="Rule 17 enable, phase B"/>
				<enumChoice choice="Rule 17 enable, Grade crossing enable, Phase A"/>
				<enumChoice choice="Rule 17 enable, Grade crossing enable, Phase B"/>
				</enumVal>
			</variable>
	

		<variable label="Hyperlight flash rate" CV="59" mask="XXXXVVVV"
				item="Global lighting option 2"
				comment="0 is fast, 15 is slow, 4 is recommended for start">
				<decVal max="15"/>
			</variable>
		<variable label="Grade crossing logic hold time" CV="59" mask="VVVVXXXX"
				item="Global lighting option 3"
				comment="0-15 seconds">
				<decVal max="15"/>
			</variable>

		<variable label="Forward Trim" CV="66">
			<decVal/>
			</variable>
		<variable label="Reverse Trim" CV="95">
			<decVal/>
			</variable>
		<variable label="Speed Table" CV="67">
			<speedTableVal/>
			</variable>



	<!-- Sound section -->
		
		<variable label="AirPump" CV="112" mask="XXXXXXXV"
				item="Sound Option 1" default="1">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable label="Articulated Exhaust" CV="112" mask="VXXXXXXX"
				item="Sound Option 2">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable label="Startup Mode" CV="113" mask="XXXXXXXV"
				item="Sound Option 5" default="0">
			<enumVal>
				<enumChoice choice="On at power up"/>
				<enumChoice choice="On when loco selected"/>
				</enumVal>
			</variable>
	
		<variable label="Dynamic Digital Exhaust" CV="113" mask="XXXXXXVX"
				item="Sound Option 6" default="1">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable label="Whistle Select" CV="115" mask="XXXXXXVV"
				item="Sound Option 3">
			<enumVal>
				<enumChoice choice="Light"/>
				<enumChoice choice="Medium"/>
				<enumChoice choice="Heavy"/>
				</enumVal>
			</variable>
	
	<!-- Volumes section -->
	
		<variable label="Bell Rate" CV="114" mask="XXXXVVVV"
				item="Sound Setting 1" default="4"
				comment="low values = fast, high values = slow">
				<decVal max="15"/>
			</variable>

		<variable label="Exhaust Throttle Rate" CV="116" mask="XVVVVVVV"
				item="Sound Setting 2" default="0"
				comment="When Auto Mode selected, this sets the Chuff Rate relative to throttle setting.">
				<decVal max="127"/>
			</variable>

		<variable label="Whistle Volume" CV="120" mask="VVVVVVVV"
				item="Sound Setting 3" default="128">
				<decVal max="255"/>
			</variable>
			
		<variable label="Bell Volume" CV="121" mask="VVVVVVVV"
				item="Sound Setting 4" default="128">
				<decVal max="255"/>
			</variable>

		<variable label="Exhaust Volume" CV="122" mask="VVVVVVVV"
				item="Sound Setting 5" default="128" >
				<decVal max="255"/>
			</variable>
	
		<variable label="Airpump Volume" CV="123" mask="VVVVVVVV"
				item="Sound Setting 6" default="128" >
				<decVal max="255"/>
			</variable>

	
	</variables>
</decoder>

<pane name="Soundtraxx">
	<column>
		<display item="Speed Table Selection" />
		<display item="CV Address Extension" />
		<display item="EEROM Data Corrupted" />
		<display item="Function Group 3 Disable" />
		<display item="Alternate Function Map" />
		<display item="Watchdog Timer Reset" />
		<display item="Program Checksum Failure" />
		<display item="I2C Bus Acknowledge Failure" />
	</column>
</pane>

</decoder-config>



