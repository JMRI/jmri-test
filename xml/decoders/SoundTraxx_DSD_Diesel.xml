<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: SoundTraxx_DSD_Diesel.xml,v 1.3 2002-01-13 03:36:57 jacobsen Exp $ -->
<decoder-config>
		<version author="Bob Jacobsen" version="2" lastUpdated="20020108"/>

<decoder>
	<id family="DSD/DSX Diesel" mfg="Throttle-Up" mfgID="141" defnVersion="1"
			lowVersionID="9" highVersionID="14"></id>

	<programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable label="Primary Address" CV="1" comment="Short address"
						item="Short Address"  default="03">
			<decVal min="1" max="127"/></variable>

		<variable label="Manufacturer Version No" CV="7" readOnly="yes"
						item="Decoder Version"><decVal/></variable>
		<variable label="Manufacturer ID" CV="8" readOnly="yes"
						item="Manufacturer">			<decVal/></variable>

			
		<variable label="Extended Address" CV="17"
						item="Long Address" >
			<longAddressVal/></variable>

		<variable label="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>
	
	<!-- Sound section -->
	
		<variable label="Startup Mode" CV="56" mask="XXXXXXXV">
			<enumVal>
				<enumChoice choice="On at power up"/>
				<enumChoice choice="On when locomotive selected"/>
				</enumVal>
			</variable>
	
		<variable label="Compressor Pop Valve" CV="56" mask="XXXXXXVX">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>

		<variable label="RPM Interlock" CV="58" mask="XXXVXXXX">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>

	<!-- Volumes section -->
	
		<variable label="Exhaust Throttle Rate" CV="58" mask="XXXXVVVV"
				item="Sound Setting 1"
				comment="Sets number of speed steps corresponding to one throttle notch">
				<decVal max="15"/>
			</variable>
	
		<variable label="Bell Rate" CV="59" mask="XXXXVVVV"
				item="Sound Setting 2"
				comment="low values = fast, high values = slow">
				<decVal max="15"/>
			</variable>

		<variable label="Bell Volume" CV="60" mask="VVVVXXXX"
				item="Sound Setting 3" >
				<decVal max="15"/>
			</variable>

		<variable label="Horn Volume" CV="60" mask="XXXXVVVV"
				item="Sound Setting 4">
				<decVal max="15"/>
			</variable>

		<variable label="Exhaust Volume" CV="61" mask="XXXXVVVV"
				item="Sound Setting 5">
				<decVal max="15"/>
			</variable>

		<variable label="Dynamic Brake Volume" CV="61" mask="VVVVXXXX"
				item="Sound Setting 6">
				<decVal max="15"/>
			</variable>


	</variables>
</decoder>
</decoder-config>
