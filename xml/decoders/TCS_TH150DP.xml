				<enumChoice choice="Normal on/off control"/>
				<enumChoice choice="Normal on/off control"/>
				<enumChoice choice="Function on when loco forward and FL on"/>
				<enumChoice choice="Function on when loco reverse and FL on"/>
				<enumChoice choice="Reserved (0x6)"/>
