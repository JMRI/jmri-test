		<variable label="Dither frequency" CV="56"
				item="Dither frequency">
			<decVal/>
			</variable>
		<variable label="Dither amplitude" CV="57" 
				item="Dither option" >
			<decVal/>
			</variable>

		<variable label="Mars and Gyralite modulation frequency" 
						CV="59" default="46"
					item="Global lighting option 1">
			<decVal/>
			</variable>
		<variable label="Time between Mars and Gyralite modulations" 
						CV="60" default="54"
					item="Global lighting option 2">
			<decVal/>
			</variable>

		<variable label="Functions in analog mode" CV="61" mask="XXXXXXXV"
				item="Analog Mode Function Status - FL(f)">
			<enumVal>
				<enumChoice choice="off"/>
				<enumChoice choice="on"/>
				</enumVal>
			</variable>
		<variable label="Dim opposite lighting" CV="61" mask="XXXXXXVX"
			item="Global lighting option 3">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal></variable>
				
		<variable label="User Private ID #1" CV="105"
					item="User Id #1">
			<decVal/>
			</variable>
		<variable label="User Private ID #2" CV="106"
					item="User Id #2">
			<decVal/>
			</variable>
		<variable label="Speed Table" CV="67">
			<speedTableVal/>
			</variable>
			
	<!-- Define the fixed Function-Output mapping -->
	<constant label="FL(f) controls output 1" minOut="1" default="1" /> 
	<constant label="FL(r) controls output 2" minOut="2" default="1" /> 
	<constant label="F1 controls output 3" minOut="3" minFn="1" default="1" /> 
	<constant label="F2 controls output 4" minOut="4" minFn="2" default="1" /> 
