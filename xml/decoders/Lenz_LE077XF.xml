<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: Lenz_LE077XF.xml,v 1.2 2002-01-01 01:49:53 jacobsen Exp $ -->
<decoder-config>
		<version author="Joe Ellis filker@mindspring.com"
			version="1.2" lastUpdated="2001/12/30"/>

<decoder>
	<id family="Lenz" mfg="Lenz" mfgID="" defnVersion=""
				comment="Lenz LE077XF"></id>

	<programming direct="byteOnly" paged="yes"
	                     register="yes" ops="yes"></programming>

	<variables>

		<variable name="Short Address" CV="1"
		          default="03" comment="Range 1-127">
			<decVal min="1" max="127"/>
			</variable>

		<variable name="Kick Start" CV="2"
				comment="Range 0-31">
			<decVal></decVal>
			</variable>

		<variable name="Accel" CV="3"
				comment="Range 0-31">
			<decVal max="31"/>
			</variable>

		<variable name="Decel" CV="4"
				comment="Range 0-31">
			<decVal max="31"/>
			</variable>

<!-- deleted max and mid voltage-->

		<variable name="Version ID" CV="7" readOnly="yes"
				stdName="Decoder Version" >
			<decVal/>
			</variable>

		<variable name="Manufacturer ID" CV="8" readOnly="yes"
				stdName="Manufacturer">
			<decVal default="99"/>
			</variable>


		<variable name="Manufacturer ID - Reset" CV="8">
			<decVal default="99"/>
			</variable>

<!-- Deleted all CV 13 references-->

		<variable name="Long Address" CV="17" stdName="Extended Address"
		        comment="4 digit address (Range 0001-9999)">
			<longAddressVal/>
			</variable>

		<variable name="Advanced Consist Address" CV="19"
				stdName="Consist Address"
				comment="Allows permanent storage of consist address. Range 0-255">
			<decVal/>
			</variable>

		<variable name="Acceleration Trim (range 0-255)" CV="23"
				stdName="Consist Acceleration Adjustment"
		        comment="Additional Acceleration rate info for fine-tuning. (Range 0-255)">
			<decVal default="255" min="0" max="255"/>
			</variable>

		<variable name="Deceleration Trim (range 0-255)" CV="24"
				stdName="Consist Deceleration Adjustment"
		        comment="Additional Deceleration (braking) rate info for fine-tuning. (Range 0-255)">
			<decVal default="255" min="0" max="255"/>
			</variable>

		<variable name="Normal direction of motion" CV="29"
				mask="XXXXXXXV"
		        stdName="Locomotive Direction">
			<enumVal>
				<enumChoice choice="Forward"/>
				<enumChoice choice="Reverse"/>
				</enumVal>
			</variable>

		<variable name="Speed Steps" CV="29" mask="XXXXXXVX"
				stdName="Speed Step Mode" default="1">
			<enumVal>
				<enumChoice choice="14"/>
				<enumChoice choice="28/128 (recommended)"/>
				</enumVal>
			</variable>

		<variable name="Analog conversion mode" CV="29"
				mask="XXXXXVXX" default="1"
				stdName="Analog (DC) Operation">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>

		<variable name="Use Speed Table" CV="29" mask="XXXVXXXX"
				stdName="Speed Table Definition">
			<enumVal>
				<enumChoice choice="Use Vstart, Vmid, Vhigh"/>
				<enumChoice choice="Use Table"/>
				</enumVal>
			</variable>

		<variable name="Addressing Mode" CV="29" mask="XXVXXXXX"
				stdName="Address Format">
			<enumVal>
				<enumChoice choice="2 digit addressing"/>
				<enumChoice choice="4 digit addressing"/>
				</enumVal>
			</variable>

	<variable name="Accel/Decel Trim" CV="50"
				mask="XXXXXXXV"
	          	comment="Governs how loco acts in DC track block">
  			<enumVal>
				<enumChoice choice="Accel/Decel trim OFF"/>
				<enumChoice choice="Accel/Decel trim ON"/>
				</enumVal>
			</variable>


	<variable name="Brake Momentum on DC" CV="50" 
				stdName="DC Brake Momentum" mask="XXXXXVXX"
	          	comment="Governs how loco acts in DC track block">
			<enumVal>
				<enumChoice choice="Loco runs under DC analog voltage control"/>
				<enumChoice choice="Loco brakes to a stop using momentum set in CV4"/>
		        </enumVal>
			</variable>

	<variable name="Directional Headlights" CV="51"
	          	comment="Controls how headlights respond to a change of direction"
               	mask="XXXXXXXV">
		     <enumVal>
		         <enumChoice choice="Headlights are directional and operate automatically"/>
		         <enumChoice choice="Headlights are independantly controlled (F0-Front, F1-Rear)"/>
		         </enumVal>
			</variable>

	<variable name="Function Dimming" CV="51"
				stdName="Global lighting option 1"
	         	comment="Controls how headlights dim (CV 52 controls amount)"
              	mask="XXXXXXVX">
		     <enumVal>
		         <enumChoice choice="Dimming Disabled"/>
		         <enumChoice choice="F0 dims headlight"/>
		         </enumVal>
			</variable>

	<variable name="Rule 17 Headlights - Front" CV="51" 
				stdName="Global lighting option 2"
	          	comment="Controls how front headlights dim"
               	mask="XXXXXVXX">
		     <enumVal>
		         <enumChoice choice="Front Headlight dimming OFF"/>
		         <enumChoice choice="Front Headlight dimming ON (F4 dims F0)"/>
		         </enumVal>
			</variable>

	<variable name="Rule 17 Headlights - Rear" CV="51" 
				stdName="Global lighting option 3"
	         	comment="Controls how rear headlights dim"
               	mask="XXXXVXXX">
			<enumVal>
		         <enumChoice choice="Rear Headlight dimming OFF"/>
		         <enumChoice choice="Rear Headlight dimming ON (F4 dims F1)"/>
		         </enumVal>
			</variable>

	<variable name="Dimmer Control (range 0-255)" CV="52"
				stdName="Global lighting option 4"
	          	comment="Controls how much headlights dim (0-dark to 255-max bright)">
			<decVal min="0" max="255"/>
			</variable>


		<variable name="User Private ID #1" CV="105"
					stdName="User Id #1">
			<decVal/>
			</variable>

		<variable name="User Private ID #2" CV="106"
					stdName="User Id #2">
			<decVal/>
			</variable>

		<variable name="Speed Table" CV="67">
			<speedTableVal/>
			</variable>


	<!-- Define the fixed Function-Output mapping -->
	<constant name="FL(f) controls output 1" minOut="1" minFn="0"
			default="1" />
	<constant name="FL(r) controls output 2" minOut="2" minFn="0"
			default="1" />
	<constant name="F1 controls output 3" minOut="3" minFn="1"
			default="1" />
	<constant name="F2 controls output 4" minOut="4" minFn="2"
			default="1" />

	</variables>

</decoder>

<pane name="Lenz">
	<column>
		<display name="Manufacturer ID - Reset" 
			label="To restore ALL CVs to factory default values, set Manufacturer ID to 33"
			layout="left"/>
		<label label="" />
		<display name="Accel/Decel Trim" />
	</column>
</pane>

</decoder-config>

