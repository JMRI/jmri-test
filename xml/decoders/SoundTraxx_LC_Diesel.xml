<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: SoundTraxx_LC_Diesel.xml,v 1.4 2002-01-13 20:33:34 jacobsen Exp $ -->
<decoder-config>
		<version author="Bob Jacobsen" version="2" lastUpdated="20020112"/>

<decoder>
	<family name="LC Diesel" mfg="Throttle-Up"
			lowVersionID="34" highVersionID="37">
		<model model="LC Diesel" numOuts="1" />
	</family>

	<programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable label="Primary Address" CV="1" comment="Short address"
						item="Short Address"  default="03">
			<decVal min="1" max="127"/></variable>

		<variable label="Manufacturer Version No" CV="7" readOnly="yes"
						item="Decoder Version"><decVal/></variable>
		<variable label="Manufacturer ID" CV="8" readOnly="yes"
						item="Manufacturer">			<decVal/></variable>

			
		<variable label="Extended Address" CV="17"
						item="Long Address" >
			<longAddressVal/></variable>

		<variable label="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>
	
	<!-- Sound section -->
	
		<variable label="Startup Mode" CV="113" mask="XXXXXXXV"
					item="Sound Option 1">
			<enumVal>
				<enumChoice choice="On at power up"/>
				<enumChoice choice="On when locomotive selected"/>
				</enumVal>
			</variable>

		<variable label="Dynamic Digital Exhaust" CV="113" mask="XXXXXXVX" 
					item="Sound Option 2">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable label="Horn Select" CV="115" mask="XXXXXXVV"
					item="Sound Option 3">
			<enumVal>
				<enumChoice choice="1 chime"/>
				<enumChoice choice="3 chime"/>
				<enumChoice choice="5 chime"/>
				</enumVal>
			</variable>

		<variable label="RPM Interlock" CV="116" mask="XXXVXXXX"
					item="Sound Option 4">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>

	<!-- Volumes section -->
	
		<variable label="Exhaust Throttle Rate" CV="116" mask="XXXXVVVV"
				item="Sound Setting 1"
				comment="Sets number of speed steps corresponding to one throttle notch">
				<decVal max="15"/>
			</variable>
	
		<variable label="Bell Rate" CV="114" mask="XXXXVVVV"
				item="Sound Setting 2" 
				comment="low values = fast, high values = slow">
				<decVal max="15"/>
			</variable>

		<variable label="Bell Volume" CV="121" mask="VVVVVVVV"
				item="Sound Setting 3" >
				<decVal max="255"/>
			</variable>

		<variable label="Horn Volume" CV="120" mask="VVVVVVVV"
				item="Sound Setting 4" >
				<decVal max="255"/>
			</variable>

		<variable label="Exhaust Volume" CV="122" mask="VVVVVVVV"
				item="Sound Setting 5" >
				<decVal max="255"/>
			</variable>

		<variable label="Dynamic Brake Volume" CV="123" mask="VVVVVVVV"
				item="Sound Setting 6" >
				<decVal max="255"/>
			</variable>


	</variables>
</decoder>

</decoder-config>
 