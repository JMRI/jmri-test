<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" showEmptyPanes="no" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <version author="td@teamdigital1.com" version="2.0" lastUpdated="20140407"/>
<!-- Version 1 inital release -->
<!-- Version 2 4/7/14 release add turnout control option-->

  <decoder>
    <family name="Stationary Decoder" mfg="Team Digital" type="stationary">
      <model model="SHD2" lowVersionID="1" comment="SHD2 is a DCC Signal decoder"/>
    </family>
    <programming direct="yes" paged="yes" register="no" ops="no"/>
    <variables>

      <variable label="Head 1" CV="2" mask="VVVVVVVV" default="1" tooltip="Range 1-2040">
        <splitVal highCV="3" upperMask="XXXXXVVV"/>
      </variable>
	  <variable label="Head 2" CV="2" mask="VVVVVVVV" infoOnly="yes"  default="1"
			tooltip="Address derived from head 1 address">
			<splitVal highCV="3" offset="1" upperMask="XXXXVVVV"/> </variable>
			
      <variable label="Sw Address" CV="5" mask="VVVVVVVV" default="0" tooltip="Range 1-2040">
        <splitVal highCV="6" upperMask="XXXXXVVV"/> </variable>
      <variable label="Version ID" CV="7" item="Decoder Version"> <decVal/> </variable>
      <variable label="Manufacturer ID" CV="8" item="Manufacturer" default="25"> <decVal/> </variable>

      <variable label="Alternate Aspect H1" CV="18" mask="XXXXVVVV" item="Alt1" default="5" >
       <enumVal>
  		<enumChoice choice=" 0-Red"/>
  		<enumChoice choice=" 1-Yellow"/>
  		<enumChoice choice=" 2-Green"/>
  		<enumChoice choice=" 3-Lunar"/>
  		<enumChoice choice=" 4-Flash Red"/>
  		<enumChoice choice=" 5-Flash Yellow"/>
  		<enumChoice choice=" 6-Flash Green"/>
  		<enumChoice choice=" 7-Flash Lunar"/>
  		<enumChoice choice=" 8-Dark"/>
		</enumVal> </variable>
      <variable label="Alternate Aspect H2" CV="19" mask="XXXXVVVV" item="Alt2" default="5" >
       <enumVal>
  		<enumChoice choice=" 0-Red"/>
  		<enumChoice choice=" 1-Yellow"/>
  		<enumChoice choice=" 2-Green"/>
  		<enumChoice choice=" 3-Lunar"/>
  		<enumChoice choice=" 4-Flash Red"/>
  		<enumChoice choice=" 5-Flash Yellow"/>
  		<enumChoice choice=" 6-Flash Green"/>
  		<enumChoice choice=" 7-Flash Lunar"/>
  		<enumChoice choice=" 8-Dark"/>
		</enumVal> </variable>
      
      <variable label="Red 1" CV="20" mask="VVVVVVVV" item="R1" default="128" > <decVal/> </variable>
      <variable label="Yellow 1" CV="21" mask="VVVVVVVV" item="Y1" default="128" > <decVal/> </variable>
      <variable label="Green 1" CV="22" mask="VVVVVVVV" item="G1" default="128" > <decVal/> </variable>
      <variable label="Lunar 1" CV="23" mask="VVVVVVVV" item="L1" default="128" > <decVal/> </variable>
      <variable label="Red 1" CV="24" mask="VVVVVVVV" item="R2" default="128" > <decVal/> </variable>
      <variable label="Yellow 2" CV="25" mask="VVVVVVVV" item="Y2" default="128" > <decVal/> </variable>
      <variable label="Green 2" CV="26" mask="VVVVVVVV" item="G2" default="128" > <decVal/> </variable>
      <variable label="Lunar 2" CV="27" mask="VVVVVVVV" item="L2" default="128" > <decVal/> </variable>
      
      <variable label="Option 1" CV="29" mask="XXXXXXXV" item="Opt1" default="0">
        <enumVal>
          <enumChoice choice="No">
            <choice>No</choice>
          </enumChoice>
          <enumChoice choice="Yes">
            <choice>Yes</choice>
          </enumChoice>
        </enumVal> </variable>
	  <variable label="Option 2" CV="29" mask="XXXXXXVX" item="Opt2" default="0">
	    <enumVal>
          <enumChoice choice="No">
            <choice>No</choice>
          </enumChoice>
          <enumChoice choice="Yes">
            <choice>Yes</choice>
          </enumChoice>
        </enumVal> </variable>
	  <variable label="Option 3" CV="29" mask="XXXXXVXX" item="Opt3" default="0">
	    <enumVal>
          <enumChoice choice="No">
            <choice>No</choice>
          </enumChoice>
          <enumChoice choice="Yes">
            <choice>Yes</choice>
          </enumChoice>
        </enumVal> </variable>
    </variables>
  </decoder>
  
  <pane name="SHD2">
    <column>
      <row>
        <column>
          <label label="*** NOTE:  Ops Mode programming is not available! ***"/>      
         </column>
      </row>   
      <label label=" "/>
      <row>
        <column>
          <label label="------  Decoder Address ------ "/>      
          <display item="Head 1"/>
         </column>
         <column>
          <display item="Head 2"/>
          </column>
      </row>
      <label label=" "/>
      <label label=" "/>
      <row>
        <column>
          <label label="------ Turnout Address ------ "/>
          <display item="Sw Address"/>
          <label label="This is the base address if Option 3 is enabled."/>
          <label label="If Option 2 and 3 are disabled and"/>
          <label label="this address is greater than zero"/>
          <label label="then this address controls the lunar"/>
          <label label="outputs with close/throw commands."/>
         </column>      
      </row>
      <label label=" "/>
      <label label=" "/>
      <row>
        <column>
          <label label="------ Alternate Aspect ------ "/>
          <display item="Alt1"/>
          <display item="Alt2"/>
          <label label="These are only valid when Option 3 is enabled."/>
         </column>      
      </row>
      <label label=" "/>
      <label label=" "/>           
      <row>
        <column>
          <label label="------  Aspect Brightness ------ "/>
          <display item="R1"/>
          <display item="Y1"/>
          <display item="G1"/>
          <display item="L1"/>
          <label label=" "/>
          <display item="R2"/>
          <display item="Y2"/>
          <display item="G2"/>
          <display item="L1"/>
        </column>
       </row>
       <label label=" "/>
       <label label=" "/>
       <row>
        <column>
          <label label="------ Decoder Configuration CV29  ------ "/>
          <display item="Opt1" format="checkbox"/>
          <label label="3-lead bi-color LED"/>
          <label label=" "/>
          <display item="Opt2" format="checkbox"/>
          <label label="Lunar on solid, use for position signals"/>
          <label label=" "/>
          <display item="Opt3" format="checkbox"/>
          <label label="Turnout close/throw commands control the aspects"/>
          <label label="*** Option 3 only available in version 2 of the SHD2 ****"/>
        </column>
       </row>
    </column>
  </pane>
  
  <pane name="Mfg">
    <column>
      <label label=" "/>
        <label> </label>
      <display item="Decoder Version" tooltip="The decoder version number (read only)"/>
      <display item="Manufacturer" tooltip="The manufacturer's ID number (read only)"/>
    </column>
    <name>Mfg</name>
  </pane>
  
  <pane name="CVs">
    <column>
      <cvtable/>
    </column>
    <name>CVs</name>
  </pane>
</decoder-config>
