<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: SoundTraxx_DSD_Steam.xml,v 1.1 2002-01-01 01:49:53 jacobsen Exp $ -->
<decoder-config>
		<version author="Bob Jacobsen" version="1" lastUpdated="20011231"/>

<decoder>
	<id family="DSD/DSX Steam" mfg="Throttle-Up" mfgID="141" defnVersion="1"></id>

	<programming direct="yes" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable name="Primary Address" CV="1" comment="Short address"
						stdName="Short Address"  default="03">
			<decVal min="1" max="127"/></variable>

		<variable name="Manufacturer Version No" CV="7" readOnly="yes"
						stdName="Decoder Version"><decVal/></variable>
		<variable name="Manufacturer ID" CV="8" readOnly="yes"
						stdName="Manufacturer">			<decVal/></variable>

			
		<variable name="Extended Address" CV="17"
						stdName="Long Address" >
			<longAddressVal/></variable>

		<variable name="Address Format" CV="29" mask="XXVXXXXX">
			<enumVal>
				<enumChoice choice="One byte (short) address"/>
				<enumChoice choice="Two byte (extended) address"/>
				</enumVal></variable>
	
	<!-- Sound section -->
		
		<variable name="Event Clock Mode" CV="51" mask="XXXXXXXV"
				stdName="Sound Group 1 Option 1">
			<enumVal>
				<enumChoice choice="Scale Time"/>
				<enumChoice choice="Real Time"/>
				</enumVal>
			</variable>
	
		<variable name="AirPump" CV="51" mask="XXXXXXVX"
				stdName="Sound Group 1 Option 2">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Blower" CV="51" mask="XXXXXVXX"
				stdName="Sound Group 1 Option 3">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Fireman Fred" CV="51" mask="XXXXVXXX"
				stdName="Sound Group 1 Option 4">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Pneumatic Grease Gun" CV="51" mask="XXXVXXXX"
				stdName="Sound Group 1 Option 5">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Pop Valve Blowoff" CV="51" mask="XXVXXXXX"
				stdName="Sound Group 1 Option 6">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Auto Blow Down" CV="51" mask="XVXXXXXX"
				stdName="Sound Group 1 Option 7">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Global Background Settings Enable" 
					stdName="Sound Group 1 Control"
					CV="51" mask="VXXXXXXX">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Articulated Exhaust" CV="52" mask="XXXXXXXV"
				stdName="Sound Option 1">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Dynamic Digital Exhaust" CV="52" mask="XXXXXXVX"
				stdName="Sound Option 2">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Cam Enable" CV="52" mask="XXXXXVXX"
				stdName="Sound Option 3">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Dual Airpump" CV="52" mask="XXXXVXXX"
				stdName="Sound Option 4">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
	
		<variable name="Startup Mode" CV="53" mask="XXXXXXXV"
				stdName="Sound Option 5">
			<enumVal>
				<enumChoice choice="On at power up"/>
				<enumChoice choice="On when locomotive selected"/>
				</enumVal>
			</variable>
	
	<!-- Volumes section -->
	
		<variable name="Volume" CV="50" mask="VVVVVVVV"
				stdName="Sound Slider 1" >
				<decVal max="15"/>
			</variable>

		<variable name="Exhaust Cut-off/Auto-Chuff-Rate" CV="54" mask="VVVVVVVV"
				stdName="Sound Slider 2"
				comment="When Cam input is selected, this sets the cut-off rate. When Auto Mode selected, this sets the Chuff Rate relative to throttle setting.">
				<decVal max="63"/>
			</variable>

		<variable name="Exhaust Tone" CV="55" mask="XXVVVVVV"
				stdName="Sound Slider 3"
				comment="Higher value give more Steamy sound">
				<decVal max="63"/>
			</variable>
	
		<variable name="Exhaust Volume" CV="56" mask="VVVVVVVV"
				stdName="Sound Slider 4">
				<decVal max="255"/>
			</variable>

		<variable name="Bell Rate" CV="52" mask="VVVVXXXX"
				stdName="Sound Slider 5"
				comment="low values = fast, high values = slow">
				<decVal max="15"/>
			</variable>
	
	</variables>
</decoder>
</decoder-config>
