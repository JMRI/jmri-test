				<enumChoice choice="2 "/>
				<enumChoice choice="3 "/>
				<enumChoice choice="4 "/>
				<enumChoice choice="5 "/>
			</enumVal>
			</variable>
		
		<variable label="EMF Switch" CV="50" mask="XXVXXXXX" 
