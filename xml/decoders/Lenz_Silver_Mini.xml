			<enumVal>
				<enumChoice choice="High "/>
				<enumChoice choice="Low "/>
			</enumVal>
		</variable>

		<variable label="Constant Braking Distance" CV="51" mask="XXXXXXXV"
			item="Constant Braking" default="0">
