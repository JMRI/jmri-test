<decoder-config
	showEmptyPanes="no">
<version
	author="John McAleely john@mcaleely.com" 
	version="1" 
	lastUpdated="20080502"
	comment="The funtion only decoder only supports writing its address" />

<decoder>
	<family name="Digital" mfg="Hornby">
		
		<model 
			model="DCC-Fitted Function Only (Unmotored trailers)" 
			options="unmotored"
			numOuts="2" 
			numFns="1" 
		    nmraWarrant="no"
			formFactor="DCC Fitted"
		    comment="Pendolino trailer"/>
	</family>

	<programming 
		direct="no" 
		paged="yes"
		register="yes"
		ops="yes"/>


	<variables>
		<variable 
			label="Primary Address" 
			CV="1" 
			comment="Short address"
			item="Short Address"  
			default="03"
			writeOnly="yes"
			inOptions="unmotored">
			<shortAddressVal/>
		</variable>

		<variable 
			label="Manufacturer ID" 
			CV="8"  
			infoOnly="yes" 
			item="Manufacturer" 
			default="48">
			<decVal/>
		</variable>

	</variables>
</decoder>
</decoder-config>








