<?xml version="1.0"?>
<!DOCTYPE decoder-config SYSTEM "decoder-config.dtd">
<!-- $Id: Digitrax_1x1.xml,v 1.4 2001-12-07 07:16:28 jacobsen Exp $ -->
<decoder-config xmlns:decoder="http://jmri.sourceforge.net/xml/decoder">
		<version author="" version="" lastUpdated=""/>

<decoder>
	<id family="Digitrax 1x1" mfg="Digitrax" mfgID="129" defnVersion="33"
				comment="CVs for Digitrax 1x1, e.g. DH121"></id>

	<programming direct="byteOnly" paged="yes" 
	                     register="yes" ops="yes"></programming>

	<variables>
		<variable name="Address" CV="1" mask="VVVVVVVV" stdName="Primary Address">
			<decVal min="1" max="127"/>
			</variable>
		<variable name="Start voltage" CV="2" stdName="Vstart"
						comment="A value of 255 corresponds to 100%">
			<decVal></decVal>
			</variable>
		<variable name="Acceleration Rate" CV="3">
			<decVal max="31"/>
			</variable>
		<variable name="Deceleration Rate" CV="4">
			<decVal max="31"/>
			</variable>
		<variable name="Maximum Voltage" CV="5" stdName="Vhigh">
			<decVal/>
			</variable>
		<variable name="Midpoint Voltage" CV="6" stdName="Vmid">
			<decVal/>
			</variable>
		<variable name="Version ID" CV="7" readOnly="yes" stdName="Manufacturer Version No">
				<decVal/>
			</variable>
		<variable name="Manufacturer ID" CV="8" readOnly="yes">
				<decVal/>
			</variable>
		<variable name="Long Address" CV="17" stdName="Extended Address">
			<longAddressVal/>
			</variable>
		<variable name="Advanced Consist address" CV="19" stdName="Consist Address">
			<decVal/>
			</variable>
		<variable name="Normal direction of motion" CV="29" mask="XXXXXXXV" stdName="Locomotive Direction">
			<enumVal>
				<enumChoice choice="forward"/>
				<enumChoice choice="reverse"/>
				</enumVal>
			</variable>
		<variable name="Speed steps" CV="29" mask="XXXXXXVX" stdName="FL Location">
			<enumVal>
				<enumChoice choice="14"/>
				<enumChoice choice="28/128"/>
				</enumVal>
			</variable>
		<variable name="Analog conversion mode" CV="29" mask="XXXXXVXX"
					 stdName="Power Source Conversion">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
		<variable name="Speed Table" CV="29" mask="XXXVXXXX"
					stdName="Speed Table Definition">
			<enumVal>
				<enumChoice choice="Off"/>
				<enumChoice choice="On"/>
				</enumVal>
			</variable>
		<variable name="Addressing Mode" CV="29" mask="XXVXXXXX"
					stdName="Address Format">
			<enumVal>
				<enumChoice choice="2 digit addressing"/>
				<enumChoice choice="4 digit addressing"/>
				</enumVal>
			</variable>
		<variable name="Kick Start" CV="65">
			<decVal/>
			</variable>
		<variable name="Forward Trim" CV="66">
			<decVal/>
			</variable>
		<variable name="Reverse Trim" CV="95">
			<decVal/>
			</variable>
		<variable name="User Private ID #1" CV="105"
					stdName="User Identification #1">
			<decVal/>
			</variable>
		<variable name="User Private ID #2" CV="106"
					stdName="User Identification #2">
			<decVal/>
			</variable>
		<variable name="Speed Table" CV="67">
			<speedTableVal/>
			</variable>
	</variables>
	
</decoder>
</decoder-config>
