<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE layout-config SYSTEM "layout-config.dtd">
<!-- This is an example panel containing a MemoryIcon to display   -->
<!-- images of digits as the value changes.  To see it work,       -->
<!-- go to the Memory Table Tool and change the value              -->
<layout-config>
  <memories class="jmri.configurexml.DefaultMemoryManagerXml">
    <memory systemName="IM10" userName="Foo" />
    <memory systemName="IM20" userName="Bar" />
  </memories>
  <paneleditor class="jmri.jmrit.display.configurexml.PanelEditorXml" name="Test memory" x="20" y="22" height="282" width="278" editable="yes" positionable="yes" controlling="yes" hide="no">
    <memoryicon memory="IM10" x="10" y="10" class="jmri.jmrit.display.configurexml.MemoryIconXml"/> <!-- icon without default shows base object without translation -->
    <memoryicon memory="IM20" x="10" y="40" class="jmri.jmrit.display.configurexml.MemoryIconXml" defaulticon="resources/icons/misc/Question-black.gif">
      <memorystate value="0" icon="resource:resources/icons/misc/Nixie/M0B.gif" />
      <memorystate value="1" icon="resource:resources/icons/misc/Nixie/M1B.gif" />
      <memorystate value="2" icon="resource:resources/icons/misc/Nixie/M2B.gif" />
      <memorystate value="3" icon="resource:resources/icons/misc/Nixie/M3B.gif" />
      <memorystate value="4" icon="resource:resources/icons/misc/Nixie/M4B.gif" />
      <memorystate value="5" icon="resource:resources/icons/misc/Nixie/M5B.gif" />
      <memorystate value="6" icon="resource:resources/icons/misc/Nixie/M6B.gif" />
      <memorystate value="7" icon="resource:resources/icons/misc/Nixie/M7B.gif" />
      <memorystate value="8" icon="resource:resources/icons/misc/Nixie/M8B.gif" />
      <memorystate value="9" icon="resource:resources/icons/misc/Nixie/M9B.gif" />
      <memorystate value="gray" icon="resource:resources/icons/mediumschematics/LEDs/GRAYLED.gif" />
    </memoryicon>
  </paneleditor>
</layout-config>

