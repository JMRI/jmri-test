<?xml version="1.0"?>
<!DOCTYPE programmer:programmer-config SYSTEM "DTD/programmer-config.dtd">
<programmer:programmer-config xmlns:programmer="http://jmri.sourceforge.net/xml/programmer">
<!-- $Id: MultiPane.xml,v 1.7 2001-11-23 22:02:28 jacobsen Exp $ -->
<programmer:programmer>

	<programmer:pane name="Basic">
		<programmer:column>
			<programmer:variable name="Primary Address"/>
			<programmer:variable name="Extended Address"/>
			<programmer:variable name="Address Format"/>
			<programmer:variable name="Locomotive Direction" format ="radiobuttons" layout="left"/>
			<programmer:variable name="User Identification #1"/>
			<programmer:variable name="User Identification #2"/>
			<programmer:variable name="FL Location" layout="above"/>
			<programmer:variable name="Power Source Conversion" format="radiobuttons" layout="left"/>
			<programmer:variable name="Analog Power Conversion" format="checkbox"/>
			<programmer:variable name="Radio Power Conversion" format="checkbox"/>
			<programmer:variable name="Zero-1 Power Conversion" format="checkbox"/>
			<programmer:variable name="Trix Power Conversion" format="checkbox"/>
			<programmer:variable name="CTC/Railcommand Power Conversion" format="checkbox"/>
		</programmer:column>
	</programmer:pane>
	
	<programmer:pane name="Motor">
		<programmer:column>
			<programmer:variable name="Kick Start"/>
			<programmer:variable name="Acceleration Rate"/>
			<programmer:variable name="Deceleration Rate"/>
			<programmer:label label=" "/>
			<programmer:variable name="Total PWM Period"/>
		</programmer:column>
		<programmer:column>
			<programmer:variable name="EMF Static Config"/>  <!-- Not an NMRA S&RP term -->
			<programmer:variable name="EMF Dynamic Config"/>  <!-- Not an NMRA S&RP term -->
			<programmer:variable name="EMF Droop Config"/>  <!-- Not an NMRA S&RP term -->
			<programmer:variable name="EMF Feedback Cutout"/>
			<programmer:variable name="DC Mode"/>  <!-- Not an NMRA S&RP term -->
		</programmer:column>
	</programmer:pane>
	
	<programmer:pane name="Speed Control">
		<programmer:column>
			<programmer:variable name="Speed Table Definition" layout="above"/>
			<programmer:variable name="Vstart"/>
			<programmer:variable name="Vmid"/>
			<programmer:variable name="Vhigh"/>
			<programmer:variable name="Forward Trim"/>
			<programmer:variable name="Reverse Trim"/>
		</programmer:column>
		<programmer:column>
			<programmer:variable name="Speed Table"/>
		</programmer:column>
	</programmer:pane>

	<programmer:pane name="Function Map">
		<programmer:column>
			<programmer:fnmapping/>
		</programmer:column>
	</programmer:pane>

	<programmer:pane name="Light FX">
		<programmer:column>
			<programmer:variable name="Function F0F effect generated"/>
			<programmer:variable name="Function F0F behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function F0R effect generated"/>
			<programmer:variable name="Function F0R behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 1 effect generated"/>
			<programmer:variable name="Function 1 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 2 effect generated"/>
			<programmer:variable name="Function 2 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 3 effect generated"/>
			<programmer:variable name="Function 3 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 4 effect generated"/>
			<programmer:variable name="Function 4 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 5 effect generated"/>
			<programmer:variable name="Function 5 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 6 effect generated"/>
			<programmer:variable name="Function 6 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 7 effect generated"/>
			<programmer:variable name="Function 7 behaviour"/>
			<programmer:separator/>
			<programmer:variable name="Function 8 effect generated"/>
			<programmer:variable name="Function 8 behaviour"/>
			<programmer:separator/>
		</programmer:column>
	</programmer:pane>

	<programmer:pane name="Consist">
		<programmer:column>
			<programmer:label label="Will decoder respond to function requests at consist address?"/>
			<programmer:variable name="Consist Address Active For F1"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F2"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F3"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F4"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F5"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F6"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F7"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For F8"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For FL in Forward"  format="checkbox"/>
			<programmer:variable name="Consist Address Active For FL in Reverse"  format="checkbox"/>
		</programmer:column>
	</programmer:pane>
	
	<programmer:pane name="Sound">
		<programmer:column>
		</programmer:column>
	</programmer:pane>

	<programmer:pane name="Sound Levels">
		<programmer:column>
		</programmer:column>
	</programmer:pane>

	<programmer:pane name="CVs">
		<programmer:column>
			<programmer:cvtable/>
		</programmer:column>
	</programmer:pane>

</programmer:programmer>
</programmer:programmer-config>
