<!-- Need annotations                                                 -->
<!-- Attributes need to get types right esp. for enumerated           -->
<!-- Attributes need REQUIRED/IMPLIED                                 -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi ="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:docbook="http://docbook.org/ns/docbook"
           xmlns:jmri="http://jmri.org/xml/schema/JMRIschema"
           xsi:schemaLocation="
                http://jmri.org/xml/schema/JMRIschema http://jmri.org/xml/schema/JMRIschema.xsd
                http://docbook.org/ns/docbook http://jmri.org/xml/schema/docbook/DocBook.xsd
            "
        >
    <xs:complexType name="TimebaseType">
      <xs:annotation>
        <xs:documentation>
          Define the XML stucture for storing the contents of a Timebase implementation.
        </xs:documentation>
        <xs:appinfo>
            <jmri:usingclass configurexml="true">jmri.managers.SimpleTimebaseXml</jmri:usingclass>
        </xs:appinfo>
      </xs:annotation>
      <xs:attribute name="class" type="xs:string"/>
      <xs:attribute name="time" type="xs:string"/> <!-- float -->
      <xs:attribute name="rate" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="run" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="master" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="sync" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="correct" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="display" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="startstopped" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="startsettime" type="xs:string"/> <!-- yes/no -->
      <xs:attribute name="startclockoption" type="xs:string"/> <!-- yes/no -->
    </xs:complexType>

</xs:schema>
