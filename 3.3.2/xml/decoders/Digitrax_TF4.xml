    <family name="Function Only, with transponding" mfg="Digitrax">
      <!-- <model model="TL1" numOuts="1" lowVersionID="250"/> -->
      <!-- <model model="TF2" numOuts="2" lowVersionID="251"/> -->
      <model model="TF4" numOuts="4" lowVersionID="254"/>
