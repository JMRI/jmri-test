<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>jmri</groupId>
    <artifactId>maven-init</artifactId>
    <version>3.99.0-SNAPSHOT</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>xbee-api</artifactId>
                            <version>0.9</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/xbee-api-0.9.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-xbee-api</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>win-registry</artifactId>
                            <version>4.4</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/WinRegistry-4.4.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-win-registry</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <!-- Joal versions 2+ are in maven central, this is needed
                    only for Joal 1.1.2 -->
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>joal</artifactId>
                            <version>1.1.2</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/joal.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-joal</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>openlcb</artifactId>
                            <version>0.6.3</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/openlcb.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-openlcb</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>serialio</artifactId>
                            <version>UNKNOWN</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/Serialio.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-serialio</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <configuration>
                            <groupId>org.jmri.third-party</groupId>
                            <artifactId>usb-view</artifactId>
                            <version>0.5.7</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/lib/ch.ntb.usb.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <id>install-jar-lib-usb-view</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                </executions>
            </plugin>        
        </plugins>
    </build>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>