    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:noNamespaceSchemaLocation = "http://jmri.org/xml/schema/aspecttable.xsd"
>

  <!-- The panel definitions here require a LocoNet system config memo -->
  <!-- as an argument, supplied via the setContext mechanism -->
  
  <name>LocoNet Tools</name>

  <node><name>Monitor &amp; Control</name>
    <node><name>Monitor LocoNet</name>
        <panel>jmri.jmrix.loconet.locomon.LocoMonPane</panel>
    </node>
    <node><name>Monitor Slots</name>
        <panel>jmri.jmrix.loconet.slotmon.SlotMonPane</panel>
    </node>
    <node><name>Monitor Clock</name>
        <panel>jmri.jmrix.loconet.clockmon.ClockMonPane</panel>
    </node>
    <node><name>Interface Status</name>
        <panel>jmri.jmrix.loconet.locostats.LocoStatsPanel</panel>
    </node>
  </node>

  <node><name>Tools</name>
    <node><name>Throttle Messaging</name>
        <panel>jmri.jmrix.loconet.throttlemsg.MessagePanel</panel>
    </node>
  </node>

  <node><name>Configuration</name>
    <node><name>Set LocoNet ID</name>
        <panel>jmri.jmrix.loconet.locoid.LocoIdPanel</panel>
    </node>
    <node><name>Configure Command Station</name>
        <panel>jmri.jmrix.loconet.cmdstnconfig.CmdStnConfigPane</panel>
    </node>
    <node><name>Configure BDL16/BDL168</name>
        <panel>jmri.jmrix.loconet.bdl16.BDL16Panel</panel>
    </node>
    <node><name>Configure DS64</name>
        <panel>jmri.jmrix.loconet.ds64.DS64Panel</panel>
    </node>
    <node><name>Configure PM4/PM42</name>
        <panel>jmri.jmrix.loconet.pm4.PM4Panel</panel>
    </node>
    <node><name>Configure SE8c</name>
        <panel>jmri.jmrix.loconet.se8.SE8Panel</panel>
    </node>
  </node>

  <node><name>Tools</name>
    <node><name>Send Throttle Message</name>
        <panel>jmri.jmrix.loconet.swing.throttlemsg.MessagePanel</panel>
    </node>
    <node><name>Send LocoNet Message</name>
        <panel>jmri.jmrix.loconet.locogen.LocoGenPanel</panel>
    </node>
  </node>

</nodes>
  